#: import NoTransition kivy.uix.screenmanager.TransitionBase
<Manager>:
    id: screen_manager
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'oa2.png'

    welc_screen: welc_screen   # main name, linked name
    math_screen: math_screen
    add1_screen: add1_screen
    add2_screen: add2_screen
    add3_screen: add3_screen
    sub1_screen: sub1_screen
    sub2_screen: sub2_screen
    mul1_screen: mul1_screen
    mul2_screen: mul2_screen
    div1_screen: div1_screen
    div2_screen: div2_screen

    WelcScreen:
        id: welc_screen
        name:'welcome'
        manager: screen_manager

    MathScreen:
        id: math_screen
        name:'math'
        manager: screen_manager

    Add1Screen:
        id: add1_screen
        name:'add1'
        manager: screen_manager

    Add2Screen:
        id: add2_screen
        name:'add2'
        manager: screen_manager

    Add3Screen:
        id: add3_screen
        name:'add3'
        manager: screen_manager

    Sub1Screen:
        id: sub1_screen
        name:'sub1'
        manager: screen_manager
    
    Sub2Screen:
        id: sub2_screen
        name:'sub2'
        manager: screen_manager

    Mul1Screen:
        id: mul1_screen
        name:'mul1'
        manager: screen_manager

    Mul2Screen:
        id: mul2_screen
        name:'mul2'
        manager: screen_manager

    Div1Screen:
        id: div1_screen
        name:'div1'
        manager: screen_manager

    Div2Screen:
        id: div2_screen
        name:'div2'
        manager: screen_manager

<WelcScreen>:
    name: 'welcome'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'oa1.png'
    MDBoxLayout:
        padding: '10dp'
        orientation: 'vertical'
        MDBoxLayout:
            orientation: 'vertical'
            padding:'10dp'
            MDLabel: # refers to the message screen that is displayed to the user
                id: name_label
                font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
                font_size: '35dp'
                pos_hint: {"center_x": 0.5,"center_y":0.5}
                text: "Name"
                halign: "center"
                theme_text_color: "Custom"
                text_color: "white"
                bold: True
            MDLabel: # blank space to move the upper bit higher
                text:""
                font_size: '40dp'
        MDBoxLayout:
            padding: '10dp'
            orientation:'vertical'
            MDTextField:
                id: juicer
                font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
                font_size: '40dp'
                color_mode: 'custom'
                helper_text: "      To start fresh, enter your name!"
                helper_text_mode: "persistent"
                line_color_focus: 'black'
                text_color_normal: 'black'
                text_color_focus: 'black'
                helper_text_color_normal: 'black'
                size_hint: 0.5, None
                pos_hint: {"center_x": 0.5,"center_y":0.5}
            MDRectangleFlatIconButton:
                font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
                font_size: '80dp'
                text: "Start!"
                theme_text_color: "Custom"
                text_color: "white"
                line_color: "green"
                pos_hint: {"center_x": 0.5}
                on_press: 
                    app.get_name()
                on_release: 
                    root.manager.transition.duration = 1
                    root.manager.current = 'math'
            MDLabel:
                text: ""
                font_size: '40dp'

<MathScreen>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'oa2.png'
    MDBoxLayout:
        rows: 5
        cols: 1
        orientation: 'vertical'
        spacing: "20dp"
        padding: "40dp"
        MDIcon:
            icon: "pearls.png"
        MDLabel:
            id: pearls
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            size_hint: 0.5, 0.1
            font_size: '60dp'
            halign: 'left'
            text: 'p'
        MDLabel:
            id: display_name
            halign: "center"
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '120dp'
            theme_text_color: "Custom"
            text_color: "white"
            font_size: '400dp'
            size_hint: 1, 1
            font_size: self.width/10
            text: 'Select the type of math\n you would like to practice!'
        
        Button:
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            background_color: 0.1, 0.20, 0.8, 1
            text: '( + ) Addition'
            size_hint: 1, 1
            font_size: '30dp'
            on_press:
                app.random_game('add')
        Button:
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            background_color: 0.1, 0.20, 0.8, 1
            text: '( - ) Subtraction'
            size_hint: 1, 1
            font_size: '30dp'
            on_press:
                app.random_game('sub')
        Button:
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            background_color: 0.1, 0.20, 0.8, 1
            text: '( * ) Multitplication'
            size_hint: 1, 1
            font_size: '30dp'
            on_press:
                app.random_game('mul')
        Button:
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            background_color: 0.1, 0.20, 0.8, 1
            text: '( / ) Division'
            size_hint: 1, 1
            font_size: '30dp'
            on_press:
                app.random_game('div')


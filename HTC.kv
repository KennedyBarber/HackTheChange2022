<Mul2Screen@GridLayout>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'oa2.png'
    BoxLayout:
        cols: 2
        rows: 4
        orientation: 'vertical'
        padding: "40dp"
        MDLabel:
            id: multiplication_equation
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            text: 'Multiplication'
            front_size: '80dp'
            halign: "center"
            theme_text_color: "Custom"
            text_color: "blue"
            font_size: self.width/10
        MDLabel:
            id: slider_display
            size: 1, 1
            front_size: '120dp'
            font_name: 'fontss/AlleyGarden-2Ogdw.ttf'
            font_size: '80dp'
            text: ""
            halign: "center"
        MDSlider:
            id: juicer_slider
            hint: True
            hint_bg_color: "blue"
            hint_text_color: "gray"
            on_release: 
            on_value: slider_display.text = str(int(self.value))
        MDRectangleFlatButton:
            id: try_button
            text: "Try!"
            background_color: 0.1, 0.20, 0.8, 1
            line_color: "green"
            pos_hint: {"center_x": 0.5}
            on_press: 
                app.mul2_check()
            
